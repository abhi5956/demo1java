package com.geekster;

public class ReplaceArrayNumber {
    public static void main(String[] args) {
        int[] arr = {1,2,4,5,8};
        int n=4;
        for(int i=0;i<arr.length;i++){
            if(arr[i]==n){
                arr[i]=0;
                break;
            }
        }
        for(int i=0;i<arr.length;i++){
            System.out.print(" "+arr[i]);
        }

    }
}
